@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Driver Dashboard";
    ViewBag.Role = "Driver";
}

<div class="container">
    <h3 class="fw-bold mb-4">Welcome, Driver </h3>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card p-4 shadow-sm border-0">
                <i class="bi bi-list-check fs-1 text-info mb-3"></i>
                <h5>Assigned Pickups</h5>
                <p class="text-muted small">View your assigned donation pickups and details.</p>
                <a asp-controller="Pickup" asp-action="Assigned" class="btn btn-info text-white btn-sm">View</a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card p-4 shadow-sm border-0">
                <i class="bi bi-clipboard-check fs-1 text-success mb-3"></i>
                <h5>Update Status</h5>
                <p class="text-muted small">Update delivery progress for each assigned pickup.</p>
                <a asp-controller="Pickup" asp-action="UpdateStatus" class="btn btn-success btn-sm">Update</a>
            </div>
        </div>
    </div>
</div>
