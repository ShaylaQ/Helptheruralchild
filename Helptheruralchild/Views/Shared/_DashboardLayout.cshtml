@{
    var role = ViewBag.Role ?? "User";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - The Rural Child</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f8f9fa;
        }

        .sidebar {
            height: 100vh;
            width: 250px;
            background-color: #004d40;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 20px;
            transition: all 0.3s;
        }

            .sidebar .nav-link {
                color: #d1e7dd;
                font-weight: 500;
            }

                .sidebar .nav-link:hover, .sidebar .nav-link.active {
                    background-color: #00695c;
                    color: #fff;
                }

        .main-content {
            margin-left: 250px;
            padding: 30px;
        }

        .navbar {
            background-color: #fff;
            box-shadow: 0 1px 4px rgba(0,0,0,0.1);
        }

        footer {
            text-align: center;
            padding: 15px 0;
            color: #6c757d;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column p-3">
        <h4 class="text-white text-center mb-4">The Rural Child</h4>
        <ul class="nav flex-column">
            <li><a href="/" class="nav-link"><i class="bi bi-house-door me-2"></i>Home</a></li>

            @if (role == "Admin")
            {
                <li><a asp-controller="Donation" asp-action="Index" class="nav-link"><i class="bi bi-box-seam me-2"></i>Manage Donations</a></li>
                <li><a asp-controller="Pickup" asp-action="Index" class="nav-link"><i class="bi bi-truck me-2"></i>Manage Pickups</a></li>
                <li><a asp-controller="Reports" asp-action="Index" class="nav-link"><i class="bi bi-bar-chart me-2"></i>Reports</a></li>
            }
            else if (role == "Donor")
            {
                <li><a asp-controller="Donation" asp-action="Create" class="nav-link"><i class="bi bi-heart-fill me-2"></i>Make Donation</a></li>
                <li><a asp-controller="Tracking" asp-action="View" class="nav-link"><i class="bi bi-geo-alt me-2"></i>Track Delivery</a></li>
                <li><a asp-controller="Donation" asp-action="History" class="nav-link"><i class="bi bi-clock-history me-2"></i>History</a></li>
            }
            else if (role == "Driver")
            {
                <li><a asp-controller="Pickup" asp-action="Assigned" class="nav-link"><i class="bi bi-list-check me-2"></i>Assigned Pickups</a></li>
                <li><a asp-controller="Pickup" asp-action="UpdateStatus" class="nav-link"><i class="bi bi-check-circle me-2"></i>Update Status</a></li>
            }

            <li><a asp-controller="Account" asp-action="Logout" class="nav-link text-danger mt-4"><i class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
        </ul>
    </div>

    <div class="main-content">
        <nav class="navbar navbar-light px-4 mb-4">
            <h5 class="m-0">@ViewData["Title"]</h5>
            <span class="text-muted">@DateTime.Now.ToString("dddd, dd MMM yyyy")</span>
        </nav>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <footer class="mt-5">
            &copy; @DateTime.Now.Year - The Rural Child Donation System
        </footer>
    </div>
</body>
</html>
