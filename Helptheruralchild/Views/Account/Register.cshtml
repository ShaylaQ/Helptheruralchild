@model Helptheruralchild.Models.User
@{
    ViewData["Title"] = "Register";
}
<div class="container d-flex align-items-center justify-content-center min-vh-100 bg-light">
    <div class="card shadow-lg p-4" style="max-width: 450px; width: 100%; border-radius: 16px;">
        <h2 class="text-center mb-4 text-success">Create Account </h2>

<h2>Register</h2>
<form asp-action="Register" method="post">
    <div>
        <label>Name:</label>
        <input asp-for="Name" required />
    </div>
    <div>
        <label>Email:</label>
        <input asp-for="Email" required type="email" />
    </div>
    <div>
        <label>Role:</label>
        <select asp-for="Role">
            <option>Donor</option>
            <option>Driver</option>
            <option>Admin</option>
        </select>
    </div>
    <div>
        <label>Password:</label>
        <input asp-for="PasswordHash" type="password" required />
    </div>
    <button type="submit">Register</button>
</form>
        <div class="text-center mt-3">
            <p class="small text-muted mb-0">
                Already have an account?
                <a asp-action="Login" class="text-success fw-semibold text-decoration-none">Login</a>
            </p>
        </div>
    </div>
</div>

@{
    ViewData["Title"] = "Register";
}