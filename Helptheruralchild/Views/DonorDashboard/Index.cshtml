@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Donor Dashboard";
    ViewBag.Role = "Donor";
}

<div class="container">
    <h3 class="fw-bold mb-4">Welcome, Donor </h3>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card p-4 shadow-sm border-0">
                <i class="bi bi-heart-fill fs-1 text-success mb-3"></i>
                <h5>Make a Donation</h5>
                <p class="text-muted small">Submit an item or cash donation securely.</p>
                <a asp-controller="Donation" asp-action="Create" class="btn btn-success btn-sm">Donate</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-4 shadow-sm border-0">
                <i class="bi bi-geo-alt-fill fs-1 text-primary mb-3"></i>
                <h5>Track My Donation</h5>
                <p class="text-muted small">Monitor your donation delivery in real-time.</p>
                <a asp-controller="Tracking" asp-action="View" class="btn btn-primary btn-sm">Track</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-4 shadow-sm border-0">
                <i class="bi bi-clock-history fs-1 text-warning mb-3"></i>
                <h5>Donation History</h5>
                <p class="text-muted small">View all your past donations.</p>
                <a asp-controller="Donation" asp-action="History" class="btn btn-warning text-white btn-sm">View</a>
            </div>
        </div>
    </div>
</div>
