@{
    ViewData["Title"] = "Welcome to Help The Rural Child";
}

<div class="container text-center mt-5">
    <div class="p-5 bg-light rounded-4 shadow">
        <h1 class="display-5 fw-bold text-primary mb-4">Help the Rural Child Donation Platform</h1>

        <p class="lead mb-4">
            Empower change through your generosity. Support underprivileged children and communities by donating items or funds that make a difference.
        </p>

        <div class="d-flex justify-content-center gap-3 mt-4">
            <a class="btn btn-primary btn-lg" href="/Account/Register">Get Started</a>
            <a class="btn btn-outline-primary btn-lg" href="/Account/Login">Login</a>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-primary">Donate Items</h5>
                    <p class="card-text">
                        Contribute by donating clothes, books, or essentials. Schedule a pickup and we’ll handle the rest.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-primary">Monetary Support</h5>
                    <p class="card-text">
                        Donate funds securely through our online payment system to support various community initiatives.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-primary">Track Deliveries</h5>
                    <p class="card-text">
                        Stay informed! Track your donation or item pickup in real-time using our live tracking feature.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <footer class="mt-5 text-muted small">
        <p>© @DateTime.Now.Year Help The Rural Child — Empowering Lives Together.</p>
    </footer>
</div>
